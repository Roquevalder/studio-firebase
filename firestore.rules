
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Allow authenticated users to read from any collection for analysis purposes.
    // This allows getCountFromServer to work on user-specified collections.
    match /{document=**} {
      allow read: if isSignedIn();
    }

    // Keep write rules for the firebaseCollections metadata, scoped to the user.
    match /firebaseCollections/{docId} {
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.userAccountId;
    }
  }
}
